<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emergency">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Emergency">
        <activity android:name=".EmergencyActivity" android:label="Emergency"></activity>
        <activity android:name=".HelpActivity" android:label="Helpline" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EmergencyActivity" />
        </activity>
        <activity android:name=".UserReportsActivity" android:label="Alerts">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EmergencyActivity" />
        </activity>
        <activity android:name=".ProfileActivity" android:label="Profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EmergencyActivity" />
        </activity>
        <activity
            android:name=".ResetPasswordActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ReportViolenceActivity" android:label="Report GBV">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EmergencyActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>